<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-login">
        <div class="panel-body">
          <div class="row">
            <div class="col-lg-12">
              <h3>Add Stock</h3>
              <form id="login-form" action="/stock/create" method="post" role="form" style="display: block;">
                <input type="hidden" name="owner" id="name" value="<%= customer.id%>">

                <div class="form-group">
                  <input type="text" name="symbol" id="symbol" tabindex="1" class="form-control" placeholder="Symbol" value="">
                </div>
                <div class="form-group">
                  <input type="text" name="nuber_of_shares" id="state" tabindex="1" class="form-control" placeholder="Number of Shares" value="">
                </div>
                <div class="form-group">
                  <div class="row">
                    <div class="col-sm-6 col-sm-offset-3">
                      <input type="submit" value="Add Stock" tabindex="4" class="form-control btn btn-login">
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
