<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-login">
        <div class="panel-body">
          <div class="row">
            <div class="col-lg-12">
              <form id="login-form" action="/customer/update/<%= customer.id %>" method="post" role="form" style="display: block;">
                <div class="form-group">
                  <input type="text" name="name" id="name" tabindex="1" class="form-control" placeholder="Name" value="<%= customer.name %>">
                </div>
                <div class="form-group">
                  <input type="text" name="email" id="email" tabindex="1" class="form-control" placeholder="email" value="<%= customer.email %>">
                </div>
                <div class="form-group">
                  <input type="text" name="state" id="state" tabindex="1" class="form-control" placeholder="state" value="<%= customer.state %>">
                </div>
                <div class="form-group">
                  <div class="row">
                    <div class="col-sm-6 col-sm-offset-3">
                      <input type="submit" value="Edit Customer" tabindex="4" class="form-control btn btn-login">
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
